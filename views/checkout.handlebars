<article class="check">
    <!--Mitad izquierda-->
    <section class="checkout-left">

        <div class="checkwrapper">
            <div class="checkcontainer">
                <form action="/checkout" method="POST">
                    <h1>
                        <i class="fas fa-shipping-fast"></i>
                        Shipping Details
                    </h1>
                    <div class="checkname">
                        <div>
                            <label for="f-name">Name</label>
                            <input type="text" name="f-name" required= "true">
                        </div>
                        <div>
                            <label for="l-name">Last name</label>
                            <input type="text" name="l-name" required= "true">
                        </div>
                    </div>
                    <div class="checkstreet">
                        <label for="name">Country</label>
                        <input type="text" name="country" required= "true">
                    </div>
                    <div class="checkstreet">
                        <label for="name">Address</label>
                        <input type="text" name="address" required= "true">
                    </div>
                    <div class="checkaddress-info">
                        <div>
                            <label for="city">City</label>
                            <input type="text" name="city" required= "true">
                        </div>
                        <div>
                            <label for="state">State</label>
                            <input type="text" name="state" required= "true">
                        </div>
                        <div>
                            <label for="zip">Zip</label>
                            <input type="text" name="zip" required= "true">
                        </div>
                    </div>
                    <h1>
                        <i class="far fa-credit-card"></i> Payment Information
                    </h1>
                    <div class="checkcc-num">
                        <label for="card-num">Credit Card No.</label>
                        <input type="text" name="card-num" required= "true">
                    </div>
                    <div class="checkcc-info">
                        <div>
                            <label for="card-num">Exp</label>
                            <input type="text" name="expire" required= "true">
                        </div>
                        <div>
                            <label for="card-num">CCV</label>
                            <input type="text" name="security" required= "true">
                        </div>
                    </div>
                    <div class="checkbtns">
                        <button>Send</button>
                    </div>
                </form>
            </div>
        </div>
</article>