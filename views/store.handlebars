<!--Sección de tienda-->
<section class="shop">
    <!--Articulo del header de la tienda-->
    <article class="shop__header">
<h1>Store</h1>
<h3 class= "title">{{ title }}</h3>
<p class="holis">HELLOOOOW</p>

<aside>
    <h2>Filters</h2>
</aside>


    <h2>Lista de productos (20 prods)</h2> 

<p>DDWigs has the following products</p>
    </article>

<!--Articulo del body de la tienda-->
<article class="shop__body">
<main class="productList">

    {{#each products}}
    <div class="thumb">
        <img class="thumb__img" src="{{ img }}" alt="">
        <h4 class="thumb__title">{{ title }}</h4>
        <p class="thumb__minidescription">{{ minidescription }}</p>
        <div class="thumb__info">
        <p class="thumb__price">Price: $ {{ price }}</p>
        <p class="thumb__rating">Rating: {{ rating }}</p><span class="thumb__star"><i class="fas fa-star"></i></span>
        </div>
        <div class="thumb__link">
        <!--Dar click en el boton del store para pasar al product individual-->
        <a class="thumb__button" href="/product/{{title}}/{{ id }}">Ver más</a>
        </div>
    </div>
    {{/each}}
</main>

    </article>

</section>
